@model BT_DBFirst.Models.ViewModel.VMStudent
@{
    var errorMessage = TempData["errorMessage"]?.ToString();
}
@if (string.IsNullOrWhiteSpace(errorMessage))
{
    @errorMessage
}

<form asp-controller="Student" asp-action="AddStudent" method="post">
    <div class="form-group">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" /><span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Birth</label>
        <input asp-for="Birth" class="form-control" /><span asp-validation-for="Birth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Mssv</label>
        <input asp-for="Mssv" class="form-control" /><span asp-validation-for="Mssv" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Description</label>
        <input asp-for="Description" class="form-control" /><span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div>
            <label class="form-label">Giới tính: </label> 
            <input asp-for="Gender" type="radio" value="male" /> <label for="male">Male</label>
            <input asp-for="Gender" type="radio" value="female" /> <label for="female">Female</label>
        </div>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Image</label>
        <input asp-for="ImgUrl" class="form-control" /><span asp-validation-for="ImgUrl" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <a><button type="submit" value="Add" class="btn btn-primary" />Submit</a>
    </div>
</form>
